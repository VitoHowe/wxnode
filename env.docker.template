# Docker 环境变量配置文件
# 使用方法：cp env.docker.template .env

# ==================== 数据库配置 ====================
# MySQL Root 密码
MYSQL_ROOT_PASSWORD=your_strong_root_password_here

# 应用数据库配置
DB_NAME=wxnode_db
DB_USER=wxnode
DB_PASSWORD=your_strong_db_password_here

# MySQL 端口映射（宿主机:容器）
MYSQL_PORT=3306

# 数据库初始化
# 首次启动设为 true，之后改为 false
DB_INIT=true

# ==================== Redis 配置 ====================
# 是否启用 Redis
ENABLE_REDIS=false

# Redis 端口映射
REDIS_PORT=6379

# Redis 密码（留空表示无密码）
REDIS_PASSWORD=

# ==================== 应用配置 ====================
# 应用端口映射（宿主机:容器）
APP_PORT=3001

# ==================== JWT 配置 ====================
# ⚠️ 生产环境请务必修改这些密钥！
JWT_SECRET=change_this_to_a_long_random_string_in_production
JWT_EXPIRES_IN=2h
JWT_REFRESH_SECRET=change_this_to_another_long_random_string
JWT_REFRESH_EXPIRES_IN=7d

# ==================== 微信小程序配置 ====================
# 微信小程序 AppID
WECHAT_APPID=your_wechat_appid

# 微信小程序 Secret
WECHAT_SECRET=your_wechat_secret

# ==================== 日志配置 ====================
LOG_LEVEL=info

